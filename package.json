{
  "name": "comment-when-done",
  "version": "0.1.0",
  "description": "A Probot app that makes a comment on a merged PR or closed issue with content you specify in the issue/PR body.",
  "author": "Charlie Saunders <charlieasaunders@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/C-Saunders/comment-when-done"
  },
  "license": "ISC",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "nodemon --exec \"npm start\"",
    "prestart": "npm run build",
    "start": "probot run ./lib/index.js",
    "lint": "standard **/*.ts --fix",
    "test": "jest && standard **/*.ts",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage"
  },
  "dependencies": {
    "probot": "^7.2.0"
  },
  "devDependencies": {
    "@types/jest": "^23.1.5",
    "@types/nock": "^9.3.0",
    "@types/node": "^10.12.9",
    "eslint": "^5.9.0",
    "eslint-plugin-typescript": "^0.12.0",
    "jest": "^23.4.0",
    "nock": "^10.0.2",
    "nodemon": "^1.18.6",
    "smee-client": "^1.0.2",
    "standard": "^10.0.3",
    "ts-jest": "^23.0.0",
    "typescript": "^3.0.1",
    "typescript-eslint-parser": "^21.0.0"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "standard": {
    "parser": "typescript-eslint-parser",
    "env": [
      "jest"
    ],
    "plugins": [
      "typescript"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  }
}
